<Application x:Class="LockWarden.Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LockWarden.Desktop"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--Themes-->
                <ResourceDictionary Source="Themes/Theme.xaml"/>

                <ResourceDictionary Source="/Assets/Icons/Icons.xaml"/>
                
                <ResourceDictionary Source="Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="Styles/RadioButtonStyle.xaml"/>
                <ResourceDictionary Source="Styles/DropDownStyle.xaml"/>

                <ResourceDictionary Source="Styles/LoginLabelStyle.xaml"/>
                <ResourceDictionary Source="styles/LoginTextBoxStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <!--Image-->
            <BitmapImage x:Key="loginlogo" UriSource="Images\LoginLogo.png"></BitmapImage>
            <!-- <BitmapImage x:Key="panellogin" UriSource="Images\LogoPanel.jpg"></BitmapImage> -->

        </ResourceDictionary>
    </Application.Resources>
</Application>
